<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.WiFiThermometer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#0388FC</item>
        <item name="colorPrimaryVariant">#54A7FF</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorControlNormal">#54A7FF</item>
        <item name="colorControlActivated">#0388FC</item>
        <item name="colorControlHighlight">#0388FC</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    <style name="MyTimePickerTheme" parent="android:Widget.Material.Light.TimePicker" tools:targetApi="lollipop">
        <item name="android:timePickerMode">clock</item>
    </style>
    <style name="TemperatureProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/temperature_progress_bar_style</item>
    </style>
    <style name="HumidityProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/humidity_progress_bar_style</item>
    </style>
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>
</resources>